{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "types": ["node"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@controllers/*": ["./controllers/*"],
      "@routes/*": ["./routes/*"],
      "@middlewares/*": ["./middlewares/*"],
      "@models/*": ["./models/*"],
      "@types/*": ["./types/*"],
      "@utils/*": ["./utils/*"],
      "@constants/*": ["./constants/*"],
      "@classes/*": ["./classes/*"]
    }
  },
  "include": ["**/*.ts", "populate.js"],
  "exclude": ["node_modules", "dist"]
}
